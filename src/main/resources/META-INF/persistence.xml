<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="CraveX" transaction-type="JTA">
        <jta-data-source>java:comp/env/jdbc/pool</jta-data-source>
        <class>com.primeplus.cakeshop.entity.Admin</class>
        <class>com.primeplus.cakeshop.entity.Follower</class>
        <properties>
            <property name="hibernate.hbm2ddl.auto" value="create"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
            <property name="hibernate.generate_statistics" value="true"/>
            <property name="hibernate.use_sql_comments" value="true"/>
            <property name="hibernate.type" value="trace"/>
        </properties>
    </persistence-unit>
</persistence>
